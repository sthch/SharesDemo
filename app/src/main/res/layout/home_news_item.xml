<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="108dp">

    <android.support.v7.widget.CardView
        android:id="@+id/home_item_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:stateListAnimator="@drawable/cardview_touch"
        app:cardBackgroundColor="@color/item_color"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/img_news"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/home_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/img_news"
                android:lines="2"
                android:text="天津"
                android:textColor="@color/hint"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/home_news_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/img_news"
                android:text="zhongguo"
                android:textColor="@color/hint2" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
